@model LoginViewModel
@{
	ViewData["Title"] = "SignUp";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<h1>Login</h1>

		<form asp-action="Login" method="post">
			<div asp-validation-summary="All"></div>
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text mb-2" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" value="false" asp-for="RememberMe" class="checkbox">
				<span> Remember Me?</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Login">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp">SignUp.</a></p>
		<p>Forgotten Password? <a asp-action="ForgetPassword">Reset your Password Now!</a></p>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}