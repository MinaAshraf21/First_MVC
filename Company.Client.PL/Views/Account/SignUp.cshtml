@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<h1>SignUp</h1>
		<form asp-action="SignUp" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input class="text mb-3" asp-for="FirstName" placeholder="First Name" required="">
			<input class="text mb-3" asp-for="LastName" placeholder="Last Name" required="">
			<input class="text mb-3" asp-for="Username" placeholder="Username" required="">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span> I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGN UP">
		</form>
		<p>Already have an Account? <a asp-action="Login">Login.</a></p>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}