@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (TempData["Message"] is not null)
{
	<div class="toast-container position-fixed bottom-0 end-0 p-3 z-3">
		<div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
			<div class="toast-header">
				<img src="..." class="rounded me-2" alt="...">
				<strong class="me-auto">Company</strong>
				@* <small>11 mins ago</small> *@
				<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
			<div class="toast-body">
				@TempData["Message"]
			</div>
		</div>
	</div>
}


<h1>System Roles</h1>

<div class="col-md-6 text-center">
	<a asp-action="AddRole" class="btn btn-primary">Add New Role</a>
</div>
@if (Model is not null && Model.Any())
{
	<table class="table table-striped table-hover mt-3">
		<thead class="text-center">
			<tr>
				<th>@nameof(RoleViewModel.Id)</th>
				<th>@nameof(RoleViewModel.Name)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody class="text-center">
			@foreach (var role in Model)
			{
				<tr>
					<td>@role.Id</td>
					<td>@role.Name</td>

					<td>
						<a asp-controller="Role" asp-action="Details" asp-route-id="@role.Id" class="btn btn-warning">
							<i class="fa fa-eye me-2"></i>Details
						</a>
					</td>
					<td>
						<a asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-success">
							<i class="fa fa-edit me-2"></i>Edit
						</a>
					</td>
					<td>
						@* <a asp-controller="role" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">
							<i class="fa fa-trash me-2"></i>Delete
						</a> *@
						<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@role.Id">
							<i class="fas fa-trash"></i> Delete
						</button>


						<div class="modal fade" id="DeleteModal-@role.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<h1 class="modal-title fs-5" id="exampleModalLabel">Delete role</h1>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</div>
									<div class="modal-body">
										Are You Sure to Delete this role?
									</div>
									<div class="modal-footer">
										<form asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id" class="mt-4">
											<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
											<input type="submit" value="Delete" class="btn btn-danger" />
										</form>
									</div>
								</div>
							</div>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info mt-3">
		<h2>No roles Available!</h2>
	</div>
}


