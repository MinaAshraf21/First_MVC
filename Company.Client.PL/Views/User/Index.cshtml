@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] is not null)
{
	<div class="toast-container position-fixed bottom-0 end-0 p-3 z-3">
		<div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
			<div class="toast-header">
				<img src="..." class="rounded me-2" alt="...">
				<strong class="me-auto">Company</strong>
				@* <small>11 mins ago</small> *@
				<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
			<div class="toast-body">
				@TempData["Message"]
			</div>
		</div>
	</div>
}


<h1>System Users</h1>

<div class="m-2">
	<form class="row offset-2" asp-action="Index" method="get">
		<div class="col-8">
			<input class="form-control" type="text" name="searchTerm" placeholder="Search by user email" />
		</div>
		<div class="col-4">
			<input type="submit" class="btn btn-outline-dark" value="Search" />
		</div>
	</form>
</div>


@* <a asp-controller="Account" asp-action="SignUp" class="btn btn-info my-3">
	Create User
</a> *@
@if (Model is not null && Model.Any())
{
	<table class="table table-striped table-hover mt-3">
		<thead class="text-center">
			<tr>
				<th>@nameof(UserViewModel.FirstName)</th>
				<th>@nameof(UserViewModel.LastName)</th>
				<th>@nameof(UserViewModel.Email)</th>
				<th>@nameof(UserViewModel.Roles)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody class="text-center">
			@foreach (var user in Model)
			{
				<tr>
					<td>@user.FirstName</td>
					<td>@user.LastName</td>
					<td>@user.Email</td>
					<th>@(string.Join(",", user.Roles))</th>

					<td>
						<a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning">
							<i class="fa fa-eye me-2"></i>Details
						</a>
					</td>
					<td>
						<a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success">
							<i class="fa fa-edit me-2"></i>Edit
						</a>
					</td>
					<td>
						@* <a asp-controller="user" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
							<i class="fa fa-trash me-2"></i>Delete
						</a> *@
						<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@user.Id">
							<i class="fas fa-trash"></i> Delete
						</button>


						<div class="modal fade" id="DeleteModal-@user.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<h1 class="modal-title fs-5" id="exampleModalLabel">Delete user</h1>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</div>
									<div class="modal-body">
										Are You Sure to Delete this user?
									</div>
									<div class="modal-footer">
										<form asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" class="mt-4">
											<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
											<input type="submit" value="Delete" class="btn btn-danger" />
										</form>
									</div>
								</div>
							</div>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info mt-3">
		<h2>No Users Available!</h2>
	</div>
}

